<main class="container">
  <h1>Mettre à jour le Potin</h1>
  <%= form_tag url_for(action: 'update'), method: "patch", :class => "form-group" do %>

    <label for="title">Modifier le titre :</label>
    <%= text_field_tag 'title', @current_gossip.title, :class => "form-control"%>

    <label for="content">Modifier le potin : </label>
    <%= text_area_tag 'content', @current_gossip.content, :class => "form-control", :rows => "10"%>

    <%= submit_tag "Mettre à jour", :class => "btn btn-primary"%>

  <% end %>
</main>
