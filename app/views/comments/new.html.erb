<main class="container">
  <%= form_tag url_for(action: 'create'), method: "POST", :class => "form-group" do %>

    <label for="content">Votre commentaire :</label>
    <%= text_area_tag 'content', @comment.content, :class => "form-control", :rows => "3" %>

    <%= submit_tag "Envoyer", :class => "btn btn-primary" %>

  <% end %>
</main>
